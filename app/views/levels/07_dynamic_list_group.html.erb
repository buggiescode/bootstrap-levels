<%# The below code creates an array of 10 random names %>
<%= names = Array.new(10) { Faker::Name.unique.name  } %>

<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

      <ul class="list-group">
        <% names.each do |name| %>
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
              <%= name %>
            </div>
            <span class="badge text-bg-primary rounded-pill"><%= rand(0..10) %></span>
          </li>
        <% end %>
      </ul>

    </div>
    <div class="col-md-3"></div>
  </div>
</div>
